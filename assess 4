import requests

def fetch_covid_stats(region):
    url = f"https://disease.sh/v3/covid-19/countries/{region}"
    response = requests.get(url)
    if response.status_code == 200:
        data = response.json()
        return data
    else:
        print(f"Failed to fetch data for {region}")
        return None

def display_stats(stats):
    if stats:
        country = stats.get('country')
        cases = stats.get('cases')
        recovered = stats.get('recovered')
        deaths = stats.get('deaths')
        
        print(f"COVID-19 Statistics for {country}:")
        print(f"Total Cases: {cases}")
        print(f"Recovered: {recovered}")
        print(f"Deaths: {deaths}")
    else:
        print("No data available for the specified region.")

def main():
    region = input("Enter a country name or 'all' for global stats: ").strip().lower()
    
    if region == 'all':
        region = 'all'  # for global stats
    else:
        region = region.capitalize()  # capitalize first letter for country names
    
    stats = fetch_covid_stats(region)
    display_stats(stats)

if __name__ == "__main__":
    main()

